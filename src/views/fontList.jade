doctype html
html
	head
		meta(name='charset', content='utf-8')
		title= title
		style
			include ../css/bootstrap.min.css
		style
			include ../css/styles.css
		style
			each fontFamily in fontFamilies
				| @font-face{font-family: #{fontFamily.family}; src: url('output/#{fontFamily.file}');} 
				
	body.fontlist
		header
			div.logout_form
				form(method='post' action='')
					button.btn.btn-default(type='submit' name='log_out' value='true')= 'Log out'
			h1.text-center= header1
					
		if remaining > 0
			div.container
				div.row.text-center
					button.btn.btn-default.display_more#load_more Load <span id='more_count'>#{loadMore}</span> more, <span id='remaining_count'>#{remaining}</span> fonts remaining
		div.container
			div.row.text-center
				div.col-md-6
					ul.list-group#user_list
						each user in users
							li.list-group-item= user
				div.col-md-6
					ul.list-group.text-center#font_list
						each file in files
							- var family = file.substring(file.indexOf('_')+1).replace(/(\.[A-z]*)$/g,'');
							li.list-group-item(style='font-family:#{family};')= file
		script
			include ../js/client.js
